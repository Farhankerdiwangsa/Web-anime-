{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/index.html" },
    { "source": "/home", "destination": "/index.html" },
    { "source": "/login", "destination": "/auth.html" },
    { "source": "/latest", "destination": "/latest.html" },
    { "source": "/populer", "destination": "/populer.html" },
    { "source": "/detail", "destination": "/detail.html" },
    { "source": "/episod", "destination": "/episod.html" },
    { "source": "/search", "destination": "/search.html" }
  ],
  "redirects": [
    { "source": "/index.html", "destination": "/home", "permanent": true },
    { "source": "/auth.html", "destination": "/login", "permanent": true },
    { "source": "/latest.html", "destination": "/latest", "permanent": true },
    { "source": "/populer.html", "destination": "/populer", "permanent": true },
    { "source": "/detail.html", "destination": "/detail", "permanent": true },
    { "source": "/episod.html", "destination": "/episod", "permanent": true },
    { "source": "/search.html", "destination": "/search", "permanent": true }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" },
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
